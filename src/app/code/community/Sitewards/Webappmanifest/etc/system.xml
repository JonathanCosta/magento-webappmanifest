<config>
    <tabs>
        <webappmanifest translate="label">
            <label>PWA</label>
            <sort_order>1000</sort_order>
        </webappmanifest>
    </tabs>
    <sections>
        <webappmanifest translate="label">
            <label>Sitewards WebappManifest</label>
            <tab>webappmanifest</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Sitewards WebappManifest</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <author translate="label">
                            <label>Author</label>
                            <comment><![CDATA[The entity responsible for creating the store]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </author>
                        <short_name translate="label">
                            <label>Shortname</label>
                            <comment><![CDATA[Please note, the property "name" is the store name.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </short_name>
                        <display translate="label">
                            <label>Display</label>
                            <comment><![CDATA[How the application should be rendered to the user]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>sitewards_webappmanifest/system_config_source_display</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </display>
                        <background_color translate="label">
                            <label>Background color</label>
                            <comment><![CDATA[The colour can be of the hex form (#ffffff) or a HTML color (pink)]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </background_color>
                        <theme_color translate="label">
                            <label>Theme color (hex or color name)</label>
                            <comment><![CDATA[The colour can be of the hex form (#ffffff) or a HTML color (pink)]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </theme_color>
                    </fields>
                </settings>
            </groups>
        </webappmanifest>
    </sections>
</config>
